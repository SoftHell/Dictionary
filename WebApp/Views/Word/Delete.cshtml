@using BLL
@model WebApp.ViewModels.WordDeleteViewModel
<div class="row">
    <a class="col-sm-1" asp-action="Index">
        <img src="/css/img/arrow-left.svg" alt="back-icon" class="icon icon-lg">
    </a>

    <h1 class="col-sm-10 detail-heading highlighted-heading">@Html.DisplayFor(model => model.Word.Value)</h1>

</div>

<hr/>

<h4 class="container info-box box-shadow alert-danger">
    @Resources.CRUDCommon.AreYouSureYouWantToDelete
    @Resources.Views.DTONames.TheWordPhrase
    @Model.Word.Value?
</h4>
<div class="form-box">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Word.Value)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Word.Value)
        </dd>
        @if (Model.Word.Explanation != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Word.Explanation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Word.Explanation)
            </dd>
        }
        @if (Model.Word.Example != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Word.Example)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Word.Example)
            </dd>
        }

        @if (Model.Word.Equivalents != null)
        {
            <dt class="col-sm-2" for="equivalent-list">@Resources.Views.Word.Create.Equivalents</dt>
            <dd class="col-sm-10">@LogicHelp.DisplayEquivalents(Model.Word)</dd>
        }
    </dl>

    <hr/>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Word.Id"/>
        <div class="form-check padded-lg">
            <input class="form-check-input" type="checkbox" asp-for="KeepEquivalents" id="keepEquivalents" checked>
            <label class="form-check-label" for="keepEquivalents">
                @Resources.Views.Word.Delete.KeepEquivalents
            </label>
        </div>
        <input class="btn btn-danger" type="submit" value="@Resources.CRUDCommon.Delete">
    </form>

</div>