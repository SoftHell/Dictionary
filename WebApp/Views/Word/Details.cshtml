@model Domain.Word

@functions
{
    public int GetRowNo(int i)
    {
        return ++i;
    }

}

<div class="row">
    <a class="col-sm-1" asp-action="Index">
        <img src="/css/img/arrow-left.svg" alt="back-icon" class="icon icon-lg">
    </a>

    <h1 class="col-sm-10 detail-heading">@Html.DisplayFor(model => model.Value)</h1>

    <a class="col-sm-1" asp-action="Edit" asp-route-id="@Model.Id">
        <img src="/css/img/pencil.svg" alt="edit-icon" class="icon icon-right">
    </a>
</div>
<div>
    <h4>
        @Model.PartOfSpeech!.Name
    </h4>
</div>

<hr/>
<h2 class="pronunciation-text text-center">/@Html.DisplayFor(model => model.Pronunciation)/</h2>
<div>
    <dl class="row">

        @if (Model.Equivalents != null)
        {
            const int rowNo = 0;
            @foreach (var item in Model.Equivalents)
            {
                <dt>@GetRowNo(rowNo)</dt>
                <dd>@Html.DisplayFor(modelItem => item.Value)</dd>
            }
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Explanation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Explanation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Example)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Example)
        </dd>
    </dl>
</div>
